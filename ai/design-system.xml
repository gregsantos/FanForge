<?xml version="1.0" encoding="UTF-8"?>
<design-system name="FanForge" version="1.0" approach="utility-first" framework="tailwind" pattern="shadcn-ui">
  <metadata>
    <brand-personality>
      <trait>Modern</trait>
      <trait>Creative</trait>
      <trait>Professional</trait>
      <trait>Collaborative</trait>
      <trait>Empowering</trait>
      <trait>Trustworthy</trait>
      <trait>Intuitive</trait>
    </brand-personality>
    <principles>
      <principle>Utility-first styling</principle>
      <principle>Tailwind CSS compatibility</principle>
      <principle>shadcn/ui patterns</principle>
      <principle>HSL color format</principle>
      <principle>CSS custom properties</principle>
    </principles>
  </metadata>

  <tokens format="css-custom-properties">
    <colors format="hsl" theme-support="light-dark">
      <!-- Semantic Colors (shadcn/ui pattern) -->
      <color-group name="semantic">
        <color name="background" light="0 0% 100%" dark="222.2 84% 4.9%" description="Main background" />
        <color name="foreground" light="222.2 84% 4.9%" dark="210 40% 98%" description="Main text color" />
        <color name="card" light="0 0% 100%" dark="222.2 84% 4.9%" description="Card backgrounds" />
        <color name="card-foreground" light="222.2 84% 4.9%" dark="210 40% 98%" description="Card text" />
        <color name="popover" light="0 0% 100%" dark="222.2 84% 4.9%" description="Popover backgrounds" />
        <color name="popover-foreground" light="222.2 84% 4.9%" dark="210 40% 98%" description="Popover text" />
        <color name="primary" light="199 89% 48%" dark="199 89% 48%" description="Primary brand color (#0ea5e9)" />
        <color name="primary-foreground" light="210 40% 98%" dark="222.2 84% 4.9%" description="Text on primary" />
        <color name="secondary" light="300 100% 25%" dark="300 100% 25%" description="Secondary accent (#800080)" />
        <color name="secondary-foreground" light="210 40% 98%" dark="210 40% 98%" description="Text on secondary" />
        <color name="muted" light="210 40% 96%" dark="217.2 32.6% 17.5%" description="Muted backgrounds" />
        <color name="muted-foreground" light="215.4 16.3% 46.9%" dark="215 20.2% 65.1%" description="Muted text" />
        <color name="accent" light="210 40% 96%" dark="217.2 32.6% 17.5%" description="Accent backgrounds" />
        <color name="accent-foreground" light="222.2 84% 4.9%" dark="210 40% 98%" description="Accent text" />
        <color name="destructive" light="0 84.2% 60.2%" dark="0 62.8% 30.6%" description="Error/destructive actions" />
        <color name="destructive-foreground" light="210 40% 98%" dark="210 40% 98%" description="Text on destructive" />
        <color name="border" light="214.3 31.8% 91.4%" dark="217.2 32.6% 17.5%" description="Border color" />
        <color name="input" light="214.3 31.8% 91.4%" dark="217.2 32.6% 17.5%" description="Input borders" />
        <color name="ring" light="199 89% 48%" dark="199 89% 48%" description="Focus rings" />
      </color-group>

      <!-- Extended Tailwind-style color scales -->
      <color-group name="primary-scale">
        <color name="primary-50" value="199 100% 97%" description="Very light primary" />
        <color name="primary-100" value="199 100% 93%" description="Light primary" />
        <color name="primary-200" value="199 100% 85%" description="Lighter primary" />
        <color name="primary-300" value="199 95% 74%" description="Light primary variant" />
        <color name="primary-400" value="199 93% 61%" description="Medium light primary" />
        <color name="primary-500" value="199 89% 48%" description="Base primary color" />
        <color name="primary-600" value="200 98% 39%" description="Medium dark primary" />
        <color name="primary-700" value="201 96% 32%" description="Dark primary" />
        <color name="primary-800" value="201 90% 27%" description="Darker primary" />
        <color name="primary-900" value="202 80% 24%" description="Darkest primary" />
      </color-group>

      <color-group name="neutral-scale">
        <color name="neutral-50" value="0 0% 98%" description="Very light neutral" />
        <color name="neutral-100" value="240 5% 96%" description="Light neutral" />
        <color name="neutral-200" value="240 6% 90%" description="Lighter neutral" />
        <color name="neutral-300" value="240 5% 84%" description="Light neutral variant" />
        <color name="neutral-400" value="240 5% 64%" description="Medium neutral" />
        <color name="neutral-500" value="240 4% 46%" description="Base neutral" />
        <color name="neutral-600" value="240 5% 34%" description="Medium dark neutral" />
        <color name="neutral-700" value="240 5% 26%" description="Dark neutral" />
        <color name="neutral-800" value="240 4% 16%" description="Darker neutral" />
        <color name="neutral-900" value="240 6% 10%" description="Darkest neutral" />
      </color-group>

      <!-- Status colors aligned with current usage -->
      <color-group name="status">
        <color name="success" light="142 76% 36%" dark="142 71% 45%" description="Success states" />
        <color name="warning" light="45 93% 47%" dark="45 93% 47%" description="Warning states" />
        <color name="error" light="0 84% 60%" dark="0 63% 31%" description="Error states" />
        <color name="info" light="217 91% 60%" dark="217 91% 60%" description="Info states" />
      </color-group>
    </colors>

    <spacing format="tailwind-compatible">
      <space name="0" value="0" />
      <space name="px" value="1px" />
      <space name="0.5" value="0.125rem" comment="2px" />
      <space name="1" value="0.25rem" comment="4px" />
      <space name="1.5" value="0.375rem" comment="6px" />
      <space name="2" value="0.5rem" comment="8px" />
      <space name="2.5" value="0.625rem" comment="10px" />
      <space name="3" value="0.75rem" comment="12px" />
      <space name="3.5" value="0.875rem" comment="14px" />
      <space name="4" value="1rem" comment="16px" />
      <space name="5" value="1.25rem" comment="20px" />
      <space name="6" value="1.5rem" comment="24px" />
      <space name="7" value="1.75rem" comment="28px" />
      <space name="8" value="2rem" comment="32px" />
      <space name="9" value="2.25rem" comment="36px" />
      <space name="10" value="2.5rem" comment="40px" />
      <space name="11" value="2.75rem" comment="44px" />
      <space name="12" value="3rem" comment="48px" />
      <space name="14" value="3.5rem" comment="56px" />
      <space name="16" value="4rem" comment="64px" />
      <space name="20" value="5rem" comment="80px" />
      <space name="24" value="6rem" comment="96px" />
      <space name="28" value="7rem" comment="112px" />
      <space name="32" value="8rem" comment="128px" />
      <space name="36" value="9rem" comment="144px" />
      <space name="40" value="10rem" comment="160px" />
      <space name="44" value="11rem" comment="176px" />
      <space name="48" value="12rem" comment="192px" />
      <space name="52" value="13rem" comment="208px" />
      <space name="56" value="14rem" comment="224px" />
      <space name="60" value="15rem" comment="240px" />
      <space name="64" value="16rem" comment="256px" />
      <space name="72" value="18rem" comment="288px" />
      <space name="80" value="20rem" comment="320px" />
      <space name="96" value="24rem" comment="384px" />
    </spacing>

    <border-radius>
      <radius name="DEFAULT" value="0.5rem" comment="Current app default" />
      <radius name="none" value="0" />
      <radius name="sm" value="0.125rem" />
      <radius name="md" value="0.375rem" />
      <radius name="lg" value="0.5rem" />
      <radius name="xl" value="0.75rem" />
      <radius name="2xl" value="1rem" />
      <radius name="3xl" value="1.5rem" />
      <radius name="full" value="9999px" />
    </border-radius>

    <typography>
      <font-families>
        <font-family name="sans" value="ui-sans-serif, system-ui, sans-serif" />
        <font-family name="serif" value="ui-serif, Georgia, serif" />
        <font-family name="mono" value="ui-monospace, SFMono-Regular, monospace" />
      </font-families>
      
      <font-sizes>
        <font-size name="xs" value="0.75rem" line-height="1rem" />
        <font-size name="sm" value="0.875rem" line-height="1.25rem" />
        <font-size name="base" value="1rem" line-height="1.5rem" />
        <font-size name="lg" value="1.125rem" line-height="1.75rem" />
        <font-size name="xl" value="1.25rem" line-height="1.75rem" />
        <font-size name="2xl" value="1.5rem" line-height="2rem" />
        <font-size name="3xl" value="1.875rem" line-height="2.25rem" />
        <font-size name="4xl" value="2.25rem" line-height="2.5rem" />
        <font-size name="5xl" value="3rem" line-height="1" />
        <font-size name="6xl" value="3.75rem" line-height="1" />
        <font-size name="7xl" value="4.5rem" line-height="1" />
        <font-size name="8xl" value="6rem" line-height="1" />
        <font-size name="9xl" value="8rem" line-height="1" />
      </font-sizes>
    </typography>

    <shadows>
      <shadow name="sm" value="0 1px 2px 0 rgb(0 0 0 / 0.05)" />
      <shadow name="DEFAULT" value="0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)" />
      <shadow name="md" value="0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)" />
      <shadow name="lg" value="0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)" />
      <shadow name="xl" value="0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)" />
      <shadow name="2xl" value="0 25px 50px -12px rgb(0 0 0 / 0.25)" />
      <shadow name="inner" value="inset 0 2px 4px 0 rgb(0 0 0 / 0.05)" />
      <shadow name="none" value="0 0 #0000" />
    </shadows>
  </tokens>

  <utility-classes>
    <!-- FanForge-specific utility classes -->
    <utility-class name="canvas-element">
      <description>Interactive canvas elements with selection states</description>
      <base-classes>cursor-move border-2 border-transparent transition-colors</base-classes>
      <hover-state>hover:border-primary-300</hover-state>
      <modifiers>
        <modifier name="selected" classes="border-primary-500" />
      </modifiers>
    </utility-class>

    <utility-class name="asset-palette-item">
      <description>Asset grid items with drag capability</description>
      <base-classes>aspect-square border border-neutral-200 rounded cursor-move transition-all</base-classes>
      <hover-state>hover:border-primary-500 hover:shadow-md</hover-state>
    </utility-class>

    <utility-class name="campaign-card">
      <description>Campaign overview cards</description>
      <base-classes>bg-card border border-border rounded-lg p-6 cursor-pointer transition-shadow</base-classes>
      <hover-state>hover:shadow-lg</hover-state>
    </utility-class>

    <utility-class name="submission-status-pending">
      <description>Pending submission status badge</description>
      <base-classes>bg-yellow-100 text-yellow-800 border-yellow-300</base-classes>
    </utility-class>

    <utility-class name="submission-status-approved">
      <description>Approved submission status badge</description>
      <base-classes>bg-green-100 text-green-800 border-green-300</base-classes>
    </utility-class>

    <utility-class name="submission-status-rejected">
      <description>Rejected submission status badge</description>
      <base-classes>bg-red-100 text-red-800 border-red-300</base-classes>
    </utility-class>
  </utility-classes>

  <components approach="shadcn-ui">
    <!-- shadcn/ui style component specifications -->
    <component name="Button" pattern="shadcn-ui">
      <description>Configurable button with multiple variants using Tailwind utilities</description>
      <base-classes>inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50</base-classes>
      
      <variants>
        <variant name="default" classes="bg-primary text-primary-foreground hover:bg-primary/90" />
        <variant name="destructive" classes="bg-destructive text-destructive-foreground hover:bg-destructive/90" />
        <variant name="outline" classes="border border-input bg-background hover:bg-accent hover:text-accent-foreground" />
        <variant name="secondary" classes="bg-secondary text-secondary-foreground hover:bg-secondary/80" />
        <variant name="ghost" classes="hover:bg-accent hover:text-accent-foreground" />
        <variant name="link" classes="text-primary underline-offset-4 hover:underline" />
      </variants>

      <sizes>
        <size name="default" classes="h-10 px-4 py-2" />
        <size name="sm" classes="h-9 rounded-md px-3" />
        <size name="lg" classes="h-11 rounded-md px-8" />
        <size name="icon" classes="h-10 w-10" />
      </sizes>
    </component>

    <component name="Input" pattern="shadcn-ui">
      <description>Form input element with consistent styling</description>
      <base-classes>flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50</base-classes>
    </component>

    <component name="Card" pattern="shadcn-ui">
      <description>Container component with consistent styling</description>
      <base-classes>rounded-lg border bg-card text-card-foreground shadow-sm</base-classes>
      
      <sub-components>
        <component name="CardHeader" classes="flex flex-col space-y-1.5 p-6" />
        <component name="CardTitle" classes="text-2xl font-semibold leading-none tracking-tight" />
        <component name="CardDescription" classes="text-sm text-muted-foreground" />
        <component name="CardContent" classes="p-6 pt-0" />
        <component name="CardFooter" classes="flex items-center p-6 pt-0" />
      </sub-components>
    </component>

    <component name="Badge" pattern="shadcn-ui">
      <description>Small status indicator with semantic variants</description>
      <base-classes>inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2</base-classes>
      
      <variants>
        <variant name="default" classes="border-transparent bg-primary text-primary-foreground hover:bg-primary/80" />
        <variant name="secondary" classes="border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80" />
        <variant name="destructive" classes="border-transparent bg-destructive text-destructive-foreground hover:bg-destructive/80" />
        <variant name="outline" classes="text-foreground" />
      </variants>
    </component>

    <!-- FanForge-specific components -->
    <component name="Canvas" pattern="custom">
      <description>Creative workspace with drag-and-drop capabilities</description>
      <base-classes>relative w-full h-full bg-background border border-border rounded-lg overflow-hidden</base-classes>
      <features>
        <feature>Drag-and-drop asset placement using utility classes</feature>
        <feature>Selection states with .canvas-element.selected</feature>
        <feature>Zoom and pan with transform utilities</feature>
      </features>
    </component>

    <component name="AssetPalette" pattern="custom">
      <description>Asset library with categorization and search</description>
      <base-classes>flex flex-col h-full bg-card border border-border rounded-lg</base-classes>
      <sub-components>
        <component name="AssetGrid" classes="grid grid-cols-3 gap-2 p-4" />
        <component name="AssetItem" classes="asset-palette-item" />
      </sub-components>
    </component>
  </components>

  <usage-guidelines>
    <css-custom-properties>
      <guideline>Use HSL format for all color values to enable easy theming</guideline>
      <guideline>Define semantic color names (background, foreground, primary, etc.)</guideline>
      <guideline>Support both light and dark themes through CSS custom property overrides</guideline>
    </css-custom-properties>

    <utility-first-approach>
      <guideline>Prefer Tailwind utility classes over custom CSS</guideline>
      <guideline>Create component-specific utility classes only when needed (.canvas-element, .asset-palette-item)</guideline>
      <guideline>Use @apply directive for complex component styling</guideline>
    </utility-first-approach>

    <shadcn-ui-patterns>
      <guideline>Follow shadcn/ui component structure and naming conventions</guideline>
      <guideline>Use consistent base classes and variant patterns</guideline>
      <guideline>Maintain accessibility with focus states and semantic markup</guideline>
    </shadcn-ui-patterns>

    <theming>
      <guideline>Use CSS custom properties for runtime theme switching</guideline>
      <guideline>Support system preference detection (prefers-color-scheme)</guideline>
      <guideline>Maintain consistent color relationships across themes</guideline>
    </theming>
  </usage-guidelines>

  <tailwind-config>
    <extend>
      <colors>
        <color name="border" value="hsl(var(--border))" />
        <color name="input" value="hsl(var(--input))" />
        <color name="ring" value="hsl(var(--ring))" />
        <color name="background" value="hsl(var(--background))" />
        <color name="foreground" value="hsl(var(--foreground))" />
        <color name="primary">
          <shade name="DEFAULT" value="hsl(var(--primary))" />
          <shade name="foreground" value="hsl(var(--primary-foreground))" />
        </color>
        <color name="secondary">
          <shade name="DEFAULT" value="hsl(var(--secondary))" />
          <shade name="foreground" value="hsl(var(--secondary-foreground))" />
        </color>
        <color name="destructive">
          <shade name="DEFAULT" value="hsl(var(--destructive))" />
          <shade name="foreground" value="hsl(var(--destructive-foreground))" />
        </color>
        <color name="muted">
          <shade name="DEFAULT" value="hsl(var(--muted))" />
          <shade name="foreground" value="hsl(var(--muted-foreground))" />
        </color>
        <color name="accent">
          <shade name="DEFAULT" value="hsl(var(--accent))" />
          <shade name="foreground" value="hsl(var(--accent-foreground))" />
        </color>
        <color name="popover">
          <shade name="DEFAULT" value="hsl(var(--popover))" />
          <shade name="foreground" value="hsl(var(--popover-foreground))" />
        </color>
        <color name="card">
          <shade name="DEFAULT" value="hsl(var(--card))" />
          <shade name="foreground" value="hsl(var(--card-foreground))" />
        </color>
      </colors>
      <border-radius>
        <radius name="lg" value="var(--radius)" />
        <radius name="md" value="calc(var(--radius) - 2px)" />
        <radius name="sm" value="calc(var(--radius) - 4px)" />
      </border-radius>
    </extend>
  </tailwind-config>
</design-system>